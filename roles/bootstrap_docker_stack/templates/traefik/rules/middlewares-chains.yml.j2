## source: https://github.com/htpcBeginner/docker-traefik/blob/master/traefik2/rules/middlewares-chains.yml.example
http:
  middlewares:
    chain-no-auth:
      chain:
        middlewares:
#          - middlewares-rate-limit
          - middlewares-secure-headers

    chain-basic-auth:
      chain:
        middlewares:
          - middlewares-rate-limit
          - middlewares-secure-headers
          - middlewares-basic-auth

    chain-oauth:
      chain:
        middlewares:
          - middlewares-rate-limit
          - middlewares-secure-headers-ext
          - middlewares-oauth

    chain-authelia:
      chain:
        middlewares:
          - middlewares-rate-limit
          - middlewares-secure-headers
          - middlewares-authelia

    secured:
      chain:
        middlewares:
        - sslheaders
        - https-only
        - known-ips
        - auth-users

    secured-noauth:
      chain:
        middlewares:
        - sslheaders
        - https-only
        - known-ips
