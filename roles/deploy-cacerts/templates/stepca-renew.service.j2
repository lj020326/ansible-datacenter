[Unit]
Description=Step TLS Renewer for Foo service
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
#User=step
#ExecStart=/usr/bin/step ca renew --daemon /home/step/foo.crt /home/step/foo.key
User=root
#ExecStart=/usr/local/bin/step ca renew --daemon {{ deploy_cacerts_ca_local_cert_dir }}/{{ deploy_cacerts_hostname_full }}.pem {{ deploy_cacerts_ca_local_key_dir }}/{{ deploy_cacerts_hostname_full }}-key.pem
ExecStart=/bin/step ca renew --daemon {{ deploy_cacerts_ca_local_cert_dir }}/{{ deploy_cacerts_hostname_full }}.pem {{ deploy_cacerts_ca_local_key_dir }}/{{ deploy_cacerts_hostname_full }}-key.pem

[Install]
WantedBy=multi-user.target
