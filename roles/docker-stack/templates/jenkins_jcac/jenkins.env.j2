{{ ansible_managed | comment }}

## ref: https://www.jenkins.io/doc/book/managing/casc/
#CASC_JENKINS_CONFIG=/var/jenkins_home/jenkins_casc.yml
CASC_JENKINS_CONFIG=/var/jenkins_home/casc_configs/jenkins.yml

JAVA_OPTS="-Djenkins.install.runSetupWizard=false -Djava.awt.headless=true -Djavax.net.ssl.trustStore=/var/lib/jenkins/cacerts -Djavax.net.ssl.trustStorePassword=changeit"

LDAP_USERNAME="cn=readonly,{{ __docker_stack_jenkins_jcac_ldap_base_dn }}"
LDAP_PASSWORD="{{ __docker_stack_jenkins_jcac_ldap_readonly_password }}"

#JENKINS_HOST=http://localhost:8080
JENKINS_HOST=https://{{ __docker_stack_jenkins_endpoint }}

JENKINS_SLAVE_AGENT_PORT=9000

{% if __docker_stack_jenkins_jcac_jenkins_opts is defined %}
JENKINS_OPTS="{{ __docker_stack_jenkins_jcac_jenkins_opts }}"
{% endif %}
TZ="{{ docker_stack_timezone }}"

# prometheus
COLLECT_DISK_USAGE=true
COLLECTING_METRICS_PERIOD_IN_SECONDS=180

## ref: https://github.com/jenkinsci/docker/pull/577
#PLUGINS_FORCE_UPGRADE: 'true'
#JENKINS_UC_DOWNLOAD: "http://updates.jenkins.io"
#JENKINS_UC_DOWNLOAD: "http://updates.jenkins-ci.org"
#JENKINS_UC_DOWNLOAD: "https://mirrors.xmission.com/jenkins/updates/update-center.json"

GITHUB_ID="{{ __docker_stack_jenkins_cred_github_username }}"
#GITHUB_SECRET=CHANGE_ME
GITHUB_USERNAME="{{ __docker_stack_jenkins_cred_github_username }}"
GITHUB_PASSWORD="{{ __docker_stack_jenkins_cred_github_password }}"
#GITHUB_SSH_USER=CHANGE_ME
#GITHUB_SSH_PRIVATE_KEY=CHANGE_ME
GITHUB_REPO_JOB_DSL={{ __docker_stack_jenkins_github_repo_seedjob_dsl }}
#SAML_XML=CHANGE_ME
#SAML_URL=http://localhost

JENKINS_ADMIN_PASSWORD="{{ __docker_stack_jenkins_cred_jenkins_admin_user_password }}"
JENKINS_GITEA_PASSWORD="{{ __docker_stack_jenkins_cred_jenkins_git_user_password }}"

DOCKER_REGISTRY_PASSWORD="{{ __docker_stack_jenkins_cred_docker_registry_admin_password }}"

VSPHERE_PASSWORD="{{ __docker_stack_jenkins_cred_vsphere_password }}"
VMWARE_ESXI_PASSWORD="{{ __docker_stack_jenkins_cred_esxi_password }}"
VM_ROOT_PASSWORD="{{ __docker_stack_jenkins_cred_vm_root_password }}"

PACKER_SSH_PASSWORD="{{ __docker_stack_jenkins_cred_packer_ssh_password }}"

ANSIBLE_VAULT_PASSWORD="{{ __docker_stack_jenkins_cred_ansible_vault_password }}"
ANSIBLE_SSH_PASSWORD="{{ __docker_stack_jenkins_cred_ansible_ssh_password }}"
ANSIBLE_SSH_PRIVATE_KEY="{{ __docker_stack_jenkins_cred_ansible_ssh_key }}"

BITBUCKET_SSH_USERNAME="{{ __docker_stack_jenkins_cred_bitbucket_ssh_username }}"
BITBUCKET_SSH_PRIVATE_KEY="{{ __docker_stack_jenkins_cred_bitbucket_ssh_private_key }}"
