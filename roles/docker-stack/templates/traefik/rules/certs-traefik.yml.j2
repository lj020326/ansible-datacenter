
## ref: https://docs.traefik.io/https/tls/
## ref: https://doc.traefik.io/traefik/v2.3/https/tls/#certificates-stores
tls:
  certificates:
    - certFile: "/certs/{{ docker_stack_ssl_internal_cert_file }}"
      keyFile: "/certs/{{ docker_stack_ssl_internal_privatekey_file }}"
      stores:
        - default
    - certFile: "/certs/{{ docker_stack_ssl_external_cert_file }}"
      keyFile: "/certs/{{ docker_stack_ssl_external_privatekey_file }}"

  stores:
    default:
      defaultCertificate:
        certFile: "/certs/{{ docker_stack_ssl_internal_cert_file }}"
        keyFile: "/certs/{{ docker_stack_ssl_internal_privatekey_file }}"

  options:
    default:
      minVersion: VersionTLS12
#      sniStrict: true
