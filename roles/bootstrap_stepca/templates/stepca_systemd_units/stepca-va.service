{{ 'Ansible managed' | comment(format="# {}") }}

[Unit]
Description=Stepca the Let's Encrypt CA - Validation Authority
Documentation=https://github.com/letsencrypt/stepca
After=network.target

[Service]
User={{ ca_svc_user }}
Group={{ ca_svc_user }}
WorkingDirectory={{ install_root }}
ExecStart={{ install_root }}/stepca-va --config config/va.json
Restart=on-failure
NoNewPrivileges=yes
PrivateTmp=yes
ProtectSystem=yes
ProtectHome=yes
PrivateDevices=yes

[Install]
WantedBy=multi-user.target
