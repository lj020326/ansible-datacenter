  wifis:
{{ bootstrap_netplan__configuration['network']['wifis']|to_nice_yaml|indent(4, true) }}
{% endif %}
{% if bootstrap_netplan__configuration['network']['bonds'] is defined %}
  bonds:
{{ bootstrap_netplan__configuration['network']['bonds']|to_nice_yaml|indent(4, true) }}
{% endif %}
{% if bootstrap_netplan__configuration['network']['bridges'] is defined %}
  bridges:
{{ bootstrap_netplan__configuration['network']['bridges']|to_nice_yaml|indent(4, true) }}
