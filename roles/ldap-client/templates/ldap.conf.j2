# {{ ansible_managed }}
# LDAP Defaults
#

# See ldap.conf(5) for details
# This file should be world readable but not world writable.
BASE {{ ldap_client_base_dn }}
URI {{ ldap_uri }}
{% if ldap_client_sudo %}
SUDOERS_BASE {{ ldap_client_sudo_base }}
{% endif %}
#SIZELIMIT	12
#TIMELIMIT	15
#DEREF		never

# TLS certificates (needed for GnuTLS)
TLS_CACERT	{{ ldap_conf[ansible_distribution].tls_cacert }}

nss_base_passwd ou=users,{{ ldap_base }}
nss_base_group ou=groups,{{ ldap_base }}
