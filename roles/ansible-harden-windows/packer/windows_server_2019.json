{
  "variables": {
    "iso_url": "https://software-download.microsoft.com/download/pr/17763.1.180914-1434.rs5_release_SERVER_EVAL_x64FRE_en-us.iso",
    "iso_checksum_type": "sha1",
    "iso_checksum": "c4834f538a90bb41f625144c9a2e0edf8bb9b9b5"
  },
  "builders": [
    {
      "vm_name":"WindowsServer2019Packer",
      "type": "virtualbox-iso",
      "communicator": "winrm",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": false,
      "boot_wait": "2m",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "6h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "15m",
      "post_shutdown_delay": "10s",
      "guest_os_type": "Windows2012_64",
      "guest_additions_mode": "attach",
      "disk_size": 61440,
      "floppy_files": [
        "./Autounattend.xml",
        "../test/vagrant/ConfigureRemotingForAnsible.ps1",
        "./oracle-cert.cer"
      ],
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "6144"],
        ["modifyvm", "{{.Name}}", "--cpus", "4"],
        ["modifyvm", "{{.Name}}", "--vram", "32"]
      ]
    },
    {
      "vm_name":"WindowsServer2019Packer",
      "type": "vmware-iso",
      "communicator": "winrm",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": false,
      "boot_wait": "2m",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "6h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "15m",
      "tools_upload_flavor": "windows",
      "guest_os_type": "windows8srv-64",
      "disk_size": 61440,
      "floppy_files": [
        "./Autounattend.xml",
        "../test/vagrant/ConfigureRemotingForAnsible.ps1",
        "./oracle-cert.cer"
      ],
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "6144",
        "numvcpus": "4",
        "scsi0.virtualDev": "lsisas1068"
      }
    }
  ],
  "provisioners": [
    {
      "type": "windows-shell",
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "scripts": [
        "./vm-guest-tools.bat"
      ]
    },
    {
      "type": "powershell",
      "scripts": [
        "../test/vagrant/ConfigureRemotingForAnsible.ps1"
      ]
    },
    {
      "type":  "ansible",
      "playbook_file": "../test/integration/default/default.yml",
      "ansible_env_vars" : [
        "ANSIBLE_ROLES_PATH=../../"
      ],
      "extra_arguments": [
        "--connection", "packer",
        "--extra-vars", "ansible_shell_type=powershell ansible_shell_executable=None"
      ]
    },
    {
      "type": "windows-shell",
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "scripts": [
        "./end-cleaning.bat"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "builds/{{.Provider}}-juju4.harden-windows-win2019-{{isotime \"2006-01-02\"}}.box",
      "vagrantfile_template": "vagrantfile-windows_2019.template"
    }
  ]
}
