{
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "files.associations": {
      "**/defaults/**/*": "ansible",
      "**/tasks/**/*.yml" : "ansible",
      "**/handler/*.yml" : "ansible",
      "**/*_vars/**/*.yml" : "ansible",
      "**/roles/**/*.yml" : "ansible",
      "**/playbooks/**/*.yml" : "ansible",
      "**/*ansible*/**/*.yml" : "ansible",
      "**/vars/**/*.yml": "ansible",
      "**/inventory/*/*": "ansible"
  },
  "editor.tabSize": 2,
  "explorer.confirmDragAndDrop": false,
  "editor.autoClosingBrackets": "always",
  "window.zoomLevel": 0,
  "git.postCommitCommand": "push",
  "files.watcherExclude": {
      "**/.git/objects/**": true,
      "**/.git/subtree-cache/**": true,
      "**/node_modules/*/**": true
  },
  "extensions.ignoreRecommendations": false,
  "git-graph.maxDepthOfRepoSearch": 2,
  "diffEditor.ignoreTrimWhitespace": false,
  "atlascode.bitbucket.enabled": true,
  "files.trimTrailingWhitespace": true,
  "[yaml]": {
  "breadcrumbs.showArrays": true,
      "editor.insertSpaces": true,
      "editor.tabSize": 2,
      "editor.autoIndent": false,
      "gitlens.codeLens.scopes": [
          "document"
      ],
      "editor.quickSuggestions": {
          "other": true,
          "comments": false,
          "strings": true
      }
  },
  // ref: https://www.geeksforgeeks.org/how-to-integrate-git-bash-with-visual-studio-code/
  "terminal.integrated.profiles.windows":{
    "Git Bash":{"path":"C:\\apps\\Git\\bin\\bash.exe"},
  },
  "terminal.integrated.shell.windows": "C:\\apps\\Git\\bin\\bash.exe",
  "terminal.integrated.defaultProfile.windows": "Git Bash"
}