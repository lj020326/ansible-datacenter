{
    // ref: https://dev.to/jastuccio/set-file-associations-per-project-in-vs-code-55n
    "files.associations": {
      "*.yml": "ansible",
      ".bash_*": "shell",
      "*.ini.j2": "ini",
      "*.yml.j2": "yaml",
      "*.yml.*": "yaml"
    },
    "ansible.executionEnvironment.enabled": true
}